# Paystack Payment API (Primary)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# OGateway Payment API (Keep for now, unused)
OGATEWAY_API_KEY=your_ogateway_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Base URL for your application
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# Payment callback URL (for webhook, use your domain or ngrok for testing)
PAYMENT_CALLBACK_URL=https://yourdomain.com/api/payment/callback

# SMS API (Arkesel)
SMS_API_KEY=your_sms_api_key_here
SMS_SENDER_ID=SMS

# Hubnet API for data delivery
HUBNET_API_KEY=your_hubnet_api_key_here

# Supabase Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Access Control (set to 'true' to enable admin dashboard in production)
ADMIN_ACCESS_ENABLED=true

# IP Whitelist for Admin Access (comma-separated list of allowed IPs)
# Get your public IP from: https://whatismyipaddress.com/
ADMIN_ALLOWED_IPS=192.168.1.100,203.0.113.50,198.51.100.25

# Allow localhost access in development (set to 'true' to enable)
ALLOW_LOCALHOST_ADMIN=true